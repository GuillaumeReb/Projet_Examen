{% extends 'base.html.twig' %}
{% block stylesheets %}  
<style>
   .vintage-title {
    font-family: 'Great Vibes', cursive;
    font-size: 4em;
    color: #D4A017;
    text-shadow: 3px 3px 8px rgba(0,0,0,0.4);
    border-top: 2px dotted #8B4513;
    border-bottom: 2px dotted #8B4513;
    padding: 10px 0;
  }
</style>

{% endblock %}
{% block title %}Continent index{% endblock %}

{% block body %}
<main class="container">
<section class="row">
<div class="col-12">
<br>
    <h1 class="vintage-title" style="text-align:center">{{ 'title.continents'|trans }}</h1>
    <br>
<a class="btn btn-primary" href="{{ path('app_continent_new') }}" role="button">{{ 'action.create'|trans }}</a>
<br>
<br>
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-warning">
            <tr>
                <th style="text-align:center">{{ 'label.id'|trans }}</th>
                <th style="text-align:center">{{ 'label.name'|trans }}</th>
                <th style="text-align:center">{{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for continent in continents %}
            <tr class="table-light">
                <td style="text-align:center">{{ continent.id }}</td>
                <td style="text-align:center">{{ continent.name }}</td>
                <td style="text-align:center">
                {# <a class="btn btn-info" href="{{ path('app_continent_show', {'id': continent.id}) }}" role="button">Consulter</a> #}
                <a class="btn btn-success" href="{{ path('app_continent_edit', {'id': continent.id}) }}" role="button">{{ 'action.update'|trans }}</a>
                <a class="btn btn-danger" href="{{ path('app_continent_show', {'id': continent.id}) }}" role="button">{{ 'action.delete'|trans }}</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<br>
</div>
</section>
</main>

{% endblock %}
