{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/tables.css') }}">
{% endblock %}

{% block title %}Article index{% endblock %}

{% block body %}

<main class="container">
<section class="row">
<div class="col-12">
<br>
    <h1 class="rustic-title" style="text-align:center">{{ 'title.items'|trans }}</h1>
<br>
     <a class="btn btn-primary me-md-2" href="{{ path('app_article_new') }}">{{ 'action.create'|trans }}</a>
<br>
<br>
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-warning">
            <tr style="text-align:center">
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.name'|trans }}</th>
                <th>Type</th>
                <th>Marque</th>
                <th>Couleur</th>
                <th>Prix Achat</th>
                <th>Volume</th>
                <th>Degr√© d'alcool</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
      
        {% for article in pagination.items %}
            <tr class="table-light" style="text-align:center">
                <td>{{ article.id }}</td>
                <td class="w-25">{{ article.name is defined ? article.name : 'N/A' }}</td>
                <td>
                 {% if article.types is not null %}
                    {{ article.types.name}}
                    {% else %}
                        N/A
                    {% endif %}
                </td>
                 <td>{{ article.marques.name}}</td>
                 <td>
                {% if article.couleurs is not null %}
                    {{ article.couleurs.name}}
                    {% else %}
                        N/A
                    {% endif %}
                </td>               
                <td>{{ article.prixAchat }}</td>
                <td>{{ article.volume }}</td>
                <td>{{ article.titrage }}</td>
               
                <td>
                    
                    <a class="btn btn-success btn-sm" href="{{ path('app_article_edit', {'id': article.id}) }}">{{ 'action.update'|trans }}</a>
                    <a class="btn btn-danger btn-sm" href="{{ path('app_article_show', {'id': article.id}) }}">{{ 'action.delete'|trans }}</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
      <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(pagination) }}
            </div>

<br>
</div>
</section>
</main>
   
{% endblock %}
