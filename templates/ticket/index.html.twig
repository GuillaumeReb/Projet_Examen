{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/tables.css') }}">
{% endblock %}

{% block title %}Ticket index{% endblock %}

{% block body %}

<main class="container">
    <section class="row">
        <div class="col-12">
            <br>
    <h1 class="rustic-title" style="text-align:center">Tickets</h1>
            <br>
            <a class="btn btn-primary me-md-2" href="{{ path('app_ticket_new') }}">{{ 'action.create'|trans }}</a>
            <br>
            <br>

    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-warning">
            <tr style="text-align:center">
                <th>{{ 'label.id'|trans }}</th>
                <th>Annee</th>
                <th>Numero Ticket</th>
                <th>Date Vente</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>

        {% for ticket in pagination.items %}
            <tr class="table-light", style="text-align:center">
                <td>{{ ticket.id }}</td>
                <td class="w-25">{{ ticket.annee }}</td>
                <td>{{ ticket.numeroTicket }}</td>
                <td>{{ ticket.dateVente ? ticket.dateVente|date('d-m-Y') : '' }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">{{ 'action.update'|trans }}</a>
                    <a class="btn btn-danger" href="{{ path('app_ticket_show', {'id': ticket.id}) }}">{{ 'action.delete'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_ticket_new') }}">Create new</a> #}

            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(pagination) }}
            </div>


    </div>
    <br>
    </section>
</main>
{% endblock %}
