{% extends 'base.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}
<main class="container">
    <section class="row">
    <div class="col-12">
    <br>
    <h1 style="text-align:center">Marques</h1>
    <br>

    <a class="btn btn-primary me-md-2" href="{{ path('app_marque_new') }}">{{ 'action.create'|trans }}</a>
    <br>
    <br>
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-warning">
            <tr style="text-align:center">
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'title.country'|trans }}</th>
                <th>{{ 'title.manufacturers'|trans }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in pagination.items %}
            <tr class="table-light">
                <td style="text-align:center">{{ marque.id }}</td>
                <td style="text-align:center">{{ marque.name }}</td>                
                <td style="text-align:center">{{ marque.pays.name }}</td>
                <td style="text-align:center">
                {% if marque.fabricants is not null %}
                        {{ marque.fabricants.name }}
                    {% else %}
                        N/A
                    {% endif %}

                </td>
                <td style="text-align:center">
                    
                    <a class="btn btn-success" href="{{ path('app_marque_edit', {'id': marque.id}) }}">{{ 'action.update'|trans }}</a>
                    <a class="btn btn-danger" href="{{ path('app_marque_show', {'id': marque.id}) }}">{{ 'action.delete'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
    
        </tbody>
    </table>
     <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(pagination) }}
            </div>


    </div>
    <br>
    </section>
</main>
    
{% endblock %}
