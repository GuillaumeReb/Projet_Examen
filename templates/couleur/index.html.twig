{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/tables.css') }}">
{% endblock %}

{% block title %}Couleur index{% endblock %}

{% block body %}
<main class="container">
<section class="row">
<div class="col-12">
<br>
    <h1 class="rustic-title" style="text-align:center">Couleurs</h1>
<br>
<a class="btn btn-primary me-md-2" href="{{ path('app_couleur_new') }}">{{ 'action.create'|trans }}</a>
<br>
<br>
<br>
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-warning">
            <tr>
                <th style="text-align:center">{{ 'label.id'|trans }}</th>
                <th style="text-align:center">{{ 'label.name'|trans }}</th>
                <th style="text-align:center">{{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for couleur in couleurs %}
            <tr class="table-light">
                <td style="text-align:center">{{ couleur.id }}</td>
                <td style="text-align:center">{{ couleur.name }}</td>
                <td style="text-align:center">
                    {# <a href="{{ path('app_couleur_show', {'id': couleur.id}) }}">show</a> #}
                    <a class="btn btn-success" href="{{ path('app_couleur_edit', {'id': couleur.id}) }}">{{ 'action.update'|trans }}</a>
                    <a class="btn btn-danger" href="{{ path('app_couleur_show', {'id': couleur.id}) }}">{{ 'action.delete'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<br>
</div>
</section>
</main>
{% endblock %}
