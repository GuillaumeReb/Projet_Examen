{% extends 'base.html.twig' %}

{% block title %}Pays index{% endblock %}

{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
        <br>
        <h1 style="text-align:center">{{ 'title.country'|trans }}</h1>
        <br>
        <a class="btn btn-primary" href="{{ path('app_pays_new') }}" role="button">{{ 'action.create'|trans }}</a>
        <br>
        <br>

        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-warning">
                <tr>
                    <th style="text-align:center">{{ 'label.id'|trans }}</th>
                    <th style="text-align:center">{{ 'label.name'|trans }}</th>
                    <th style="text-align:center">{{ 'title.continents'|trans }}</th>
                    <th style="text-align:center">{{ 'label.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for pay in pagination.items %}
                <tr class="table-light">
                    <td style="text-align:center">{{ pay.id }}</td>
                    <td style="text-align:center">{{ pay.name }}</td>
                    <td style="text-align:center">{{ pay.continents.name }}</td>
                    <td style="text-align:center">
                        <a class="btn btn-success" href="{{ path('app_pays_edit', {'id': pay.id}) }}">{{ 'action.update'|trans }}</a>
                         <a class="btn btn-danger" href="{{ path('app_pays_show', {'id': pay.id}) }}">{{ 'action.delete'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="d-flex justify-content-center mt-4">
              {{ knp_pagination_render(pagination) }}
        </div>
        <br>
        </div>
    </section>
</main>
{% endblock %}
